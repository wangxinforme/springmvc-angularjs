<?xml version="1.0" encoding="UTF-8"?>
<!-- status=debug 可以查看log4j的装配过程 -->
<configuration status="off" monitorInterval="1800">

	<!-- Log4j 2 包含了基于LMAX 分离库的下一代的异步日志系统，在多线程环境下，异步日志系统比 Log4j 1.x 和Logback 提高了10倍性能提升（吞吐量和延迟率 ） -->

	<properties>
		<!-- 日志备份目录 -->
		<property name="BACKUP_HOME">./logs</property>
		<property name="PROJECT_NAME">angularjs</property>
	</properties>

	<appenders>
		<!-- 定义控制台输出 -->
		<Console name="Console" target="SYSTEM_OUT" follow="true">

			<!-- <PatternLayout pattern="[${PROJECT_NAME}]%date{yy/MM/dd HH:mm:ss.SSS} %-5p (%F:%L) [%M()] - %m%n" /> -->
			<!-- [angularjs]16/11/29 11:16:27.613 INFO (ApplicationContext.java:33) [setServletContext()] - # version=20161129111627606 , contextPath= -->

			<PatternLayout pattern="%sn [${PROJECT_NAME}] %d{yy/MM/dd HH:mm:ss,SSS} %r [%-6p] [%t] %c{3} %C{3}.%M(%F:%L) - %m%n" />
			<!-- 2 2016/11/29 13:16:47,644 14934 [INFO ] [main] common.utils.ApplicationContext common.utils.ApplicationContext.setServletContext(ApplicationContext.java:33) - # version=20161129131647629 , contextPath= -->

		</Console>

		<!-- 应用日志 -->
		<RollingRandomAccessFile name="RollingLog" fileName="${BACKUP_HOME}/Rolling.log" filePattern="${BACKUP_HOME}/Rolling.%d{yyyy-MM-dd-HH}.log">
			<PatternLayout pattern="%sn [${PROJECT_NAME}] %d{yy/MM/dd HH:mm:ss,SSS} %r [%-6p] [%t] %c{3} %C{3}.%M(%F:%L) - %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true" />
			</Policies>
		</RollingRandomAccessFile>
	</appenders>

	<loggers>
		<!-- 3rdparty Loggers -->
		<logger name="com.wx" level="debug" />
		<logger name="org.springframework" level="error" />
		<logger name="org.apache" level="error" />
		<logger name="org.mybatis" level="info" />

		<!-- mybatis sql log -->
		<logger name="org.apache.ibatis.jdbc.ScriptRunner" level="debug" />
		<logger name="java.sql.Connection" level="debug" />
		<logger name="java.sql.Statement" level="debug" />
		<logger name="java.sql.PreparedStatement" level="debug" />


		<!-- Root Logger -->
		<root level="debug">
			<appender-ref ref="Console" />
			<appender-ref ref="RollingLog" />
		</root>

	</loggers>

</configuration>